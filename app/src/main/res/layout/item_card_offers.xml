<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
       xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:padding="16dp">

       <TextView
           android:id="@+id/offer_location_txv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textStyle="bold"
           android:textSize="16sp"
           android:textColor="#64DD17"
           android:text="Delhi - Defence Colony / Indian"/>

       <TextView
           android:id="@+id/offer_validty_txv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="8dp"
           android:textColor="#FFA726"
           android:text="Offer validity: 31st December 2017"/>

       <TextView
            android:id="@+id/offer_store_name_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:text="Pind Balluchi"/>

       <ImageView
            android:id="@+id/store_image_view"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:background="@color/cardview_shadow_start_color"
            android:contentDescription="@string/app_name"/>

           <TextView
               android:id="@+id/offer_per_txv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="8dp"
               android:text="15% on food bill"
               android:textColor="#FFA726" />

       <TextView
            android:id="@+id/store_address_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="J2/1 Bk Dutta Marg, Rajouri Garden, New Delhi."
            android:textSize="12sp"/>

       <TextView
           android:id="@+id/offer_terms_conditions_txv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="8dp"
           android:textColor="#4527A0"
           android:text="This offer is applicable for both Debit &amp; Credit Card Customers."
           android:textSize="12sp"/>


       </LinearLayout>



</android.support.v7.widget.CardView>


